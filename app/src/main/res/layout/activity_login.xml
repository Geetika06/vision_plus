<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inception.lapi.visionplus.loginActivity">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:text="Vision Plus"
        android:textColor="#759bae"
        android:textSize="45dp"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/rect"
        android:gravity="center"
        android:hint="Mobile No OR Email ID"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:textSize="20dp"
        android:id="@+id/email_et"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rect"
        android:gravity="center"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textSize="20dp"
        android:id="@+id/password_et"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rect"
        android:gravity="center"
        android:text="LOGIN"
        android:backgroundTint="#759bae"
        android:maxLines="1"
        android:textSize="20dp"
        android:textColor="#fff"
        android:onClick="loginfun"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="Sign Up"
        android:onClick="sign_up"
        android:textColor="#759bae"
        android:textSize="28dp"/>
</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:textSize="25dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#759bae"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:onClick="skip_1"/>




</RelativeLayout>
